@{
    Layout = "../Shared/_CustomerLayout.cshtml";
}
@model OzEcommerceV14.Models.ViewModels.VendorViewModel.MessageListViewModel
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Orders
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item active">Message</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card-body">
                <div class="user-status table-responsive latest-order-table">
                    <table class="table table-bordernone">
                        <thead>
                            <tr>
                                <th scope="col">Message ID</th>
                                <th scope="col">Message Date</th>
                                <th scope="col">Order Id</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var message in Model.Messages)
                            {
                                <tr>
                                    <td><a asp-controller="Customer" asp-action="CMessageDetail" asp-route-id="@message.Id">@message.Id
                                    @if(message.Status == false)
                                    {
                                        <span style="color:red">(UnRead)</span>
                                    }</a>
                                    </td>
                                    <td class="date">@message.DateCreation.Date.ToShortDateString()</td>
                                    <td class="font-danger"><a asp-controller="Customer" asp-action="OrderDetail" asp-route-id="@message.OrderId">@message.OrderId</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
