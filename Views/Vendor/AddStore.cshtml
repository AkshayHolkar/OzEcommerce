@{
    Layout = "../Shared/_VendorLayout.cshtml";

}

@model OzEcommerceV14.Models.ViewModels.VendorViewModel.AddStoreViewModel
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Store
                        <small> Admin panel</small>
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    
                    <li class="breadcrumb-item active">Store</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-controller="Vendor" asp-action="AddStore" class="needs-validation add-product-form" novalidate="" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header">
                        <h5>Add Store Detail</h5>
                        <p>(Need to Set Store Detail in Order to add Product)</p>
                    </div>
                    <div class="card-body">
                        <div class="row product-adding">
                            <div class="col-xl-5">
                                <div class="add-product">
                                    <div class="row">
                                        <div class="col-xl-9 xl-50 col-sm-6 col-3">
                                            <ul>
                                                <li><label>Please add Logo here</label></li>
                                                <li><div class="box-input-file"><input asp-for="Logo" class="upload" onchange="document.getElementById('Fimage').src = window.URL.createObjectURL(this.files[0])" type="file"><i class="fa fa-plus"></i></div></li>
                                                <li><img id="Fimage" class="img-thumbnail" /></li>
                                                <li><label>Please add bannar image here</label></li>
                                                <li><div class="box-input-file"><input asp-for="Banner" class="upload" onchange="document.getElementById('1').src = window.URL.createObjectURL(this.files[0])" type="file"><i class="fa fa-plus"></i></div></li>
                                                <li><img id="1" class="img-thumbnail" /></li>

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-12">

                                <div class="form">
                                    <div class="form-group mb-3 row">
                                        <label for="validationCustom01" class="col-xl-3 col-sm-4 mb-0">Store Name :</label>
                                        <input asp-for="StoreName" class="form-control col-xl-8 col-sm-7" id="StoreName" type="text" required="">
                                        <div class="valid-feedback">Looks good!</div>
                                    </div>
                                    <div class="form-group mb-3 row">
                                        <label for="validationCustom01" class="col-xl-3 col-sm-4 mb-0">Tag Line :</label>
                                        <input asp-for="TagLine" class="form-control col-xl-8 col-sm-7" id="TagLine" type="text" required="">
                                        <div class="valid-feedback">Looks good!</div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-xl-3 col-sm-4">Add Description :</label>
                                        <div class="col-xl-8 col-sm-7 pl-0 description-sm">
                                            <textarea asp-for="Description" id="Description" class="form-control" cols="10" rows="4"></textarea>
                                        </div>
                                    </div>

                                  
                                    <div class="offset-xl-3 offset-sm-4">
                                        <button type="submit" value="AddStore" class="btn btn-primary">ADD</button>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                    </div>
            </form>

        </div>
    </div>
</div>

<!-- Container-fluid Ends-->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
