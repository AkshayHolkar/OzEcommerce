@{
    Layout = "../Shared/_VendorLayout.cshtml";
}
@model OzEcommerceV14.Models.Message
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Message
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item active">Message</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
                <div class="col-md-12">
                    <label for="OrderId">Order Id: </label>
                    <label for="OrderId"><strong>@Model.OrderId</strong></label>

                </div>

                <div class="col-md-12">
                    <label for="Title"><strong>Title: </strong></label>
                    <label for="Title">@Model.Title</label>

                </div>
                <div class="col-md-12">
                    <label for="Body"><strong>Body: </strong></label>
                    <label for="Body">@Model.Body</label>

                </div>
                <input type="hidden" asp-for="OrderId" name="orderId" id="orderId" value="@Model.OrderId" />

                <div class="col-md-12">
                    <br />
                    <div class="col-12"><a asp-controller="Vendor" asp-action="SendCMessage" asp-route-id="@Model.OrderId" class="btn btn-classic">Reply</a></div>

                </div>


        </div>
    </div>
</div>
