@{
    ViewData["Title"] = "Products";
}
@model OzEcommerceV14.Models.ViewModels.ProductViewModel.ProductListViewModel

<section class="section-b-space ratio_asos">
    <div class="collection-wrapper">
        <div class="container">
            <div class="row">
                <div class="collection-content col">
                    <div class="page-main-content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="collection-product-wrapper">
                                    <div class="product-top-filter">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="product-filter-content">
                                                    <div class="search-count">
                                                        <h5>Total Related Products found @Model.Product.Count</h5>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="product-wrapper-grid product-load-more">
                                        <div class="row">
                                            @foreach (var product in Model.Product)
                                            {
                                                <div class="col-xl-3 col-md-6 col-grid-box">
                                                    <div class="product-box">
                                                        <div class="img-wrapper">
                                                            <div class="front">
                                                                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Product.Id">
                                                                    <img src="~/productimages/@product.MainImage"
                                                                         class="img-fluid blur-up lazyload bg-img"
                                                                         alt="">
                                                                </a>
                                                            </div>
                                                            <div class="back">
                                                                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Product.Id">
                                                                    <img src="~/productimages//@product.SecondImage"
                                                                         class="img-fluid blur-up lazyload bg-img"
                                                                         alt="">
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <div class="product-detail">
                                                            <div>
                                                                <div>
                                                                    @{double j = 5 - product.AvgRating;
                                                                    }
                                                                    @for (double i = 1; i <= product.AvgRating; i++)
                                                                    {
                                                                        <i class="fa fa-star" style="color:orange"></i>

                                                                    }
                                                                    @for (double k = 1; k <= j; k++)
                                                                    {
                                                                        <i class="fa fa-star"></i>

                                                                    }
                                                                </div>
                                                                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Product.Id">
                                                                    <h6>@product.Product.Name</h6>
                                                                </a>
                                                                <p>
                                                                    @product.Product.Description
                                                                </p>
                                                                <h4>$@product.Product.Price</h4>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="load-more-sec">
                                        <a href="javascript:void(0)" class="loadMore">
                                            load
                                            more
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- section End -->
