@{
    ViewData["Title"] = "Check Out";
}
@model OzEcommerceV14.Models.ViewModels.OrderPlaceViewModel

<!-- section start -->
<section class="section-b-space">
    <div class="container">
        <div class="checkout-page">
            <div class="checkout-form">
                <form method="post" asp-controller="Order" asp-action="PlaceOrder"
                    class="needs-validation add-product-form" novalidate="" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6 col-sm-12 col-xs-12">
                            <div class="checkout-title">
                                <h3>Billing Details</h3>
                            </div>
                            <div class="row check-out">
                                @if (Model.Account != null)
                                {
                                    <div class="form-group col-md-12 col-sm-6 col-xs-12">
                                        <div class="field-label">Full Name</div>
                                        <input asp-for="Account.FullName" type="text" name="field-name"
                                        value="@Model.Account.FullName" placeholder="">
                                    </div>

                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Phone</div>
                                        <input asp-for="Account.Phone" type="text" name="field-name"
                                        value="@Model.Account.Phone" placeholder="">
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Email Address</div>
                                        <input asp-for="Account.Email" type="text" name="field-name"
                                        value="@Model.Account.Email" placeholder="">
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group col-md-12 col-sm-6 col-xs-12">
                                        <div class="field-label">Full Name</div>
                                        <input asp-for="Account.FullName" type="text" name="field-name" value=""
                                        placeholder="">
                                    </div>

                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Phone</div>
                                        <input asp-for="Account.Phone" type="text" name="field-name" value=""
                                        placeholder="">
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Email Address</div>
                                        <input asp-for="Account.Email" type="text" name="field-name" value=""
                                        placeholder="">
                                    </div>
                                }
                                @if (Model.Address != null)
                                {
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Country</div>
                                        <input asp-for="Address.Country" type="text" name="field-name" value="Australia"
                                        placeholder="">

                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Address line 1</div>
                                        <input asp-for="Address.Property" type="text" name="field-name"
                                        value="@Model.Address.Property"
                                        placeholder="Apartment, Unit, Street, Block number/name">
                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Address line 2</div>
                                        <input asp-for="Address.StreetName" type="text" name="field-name"
                                        value="@Model.Address.StreetName" placeholder="Street Name">
                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Town/City</div>
                                        <input asp-for="Address.City" type="text" name="field-name"
                                        value="@Model.Address.City" placeholder="">
                                    </div>
                                    <div class="form-group col-md-12 col-sm-6 col-xs-12">
                                        <div class="field-label">State </div>
                                        <input asp-for="Address.State" type="text" name="field-name"
                                        value="@Model.Address.State" placeholder="">
                                    </div>

                                    <div class="form-group col-md-12 col-sm-6 col-xs-12">
                                        <div class="field-label">Postal Code</div>
                                        <input asp-for="Address.Postcode" type="text" name="field-name"
                                        value="@Model.Address.Postcode" placeholder="">
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Country</div>
                                        <input asp-for="Address.Country" type="text" name="field-name" value="Australia"
                                        placeholder="">

                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Address line 1</div>
                                        <input asp-for="Address.Property" type="text" name="field-name" value=""
                                        placeholder="Apartment, Unit, Street, Block number/name">
                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Address line 2</div>
                                        <input asp-for="Address.StreetName" type="text" name="field-name" value=""
                                        placeholder="Street Name">
                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        <div class="field-label">Town/City</div>
                                        <input asp-for="Address.City" type="text" name="field-name" value="" placeholder="">
                                    </div>
                                    <div class="form-group col-md-12 col-sm-6 col-xs-12">
                                        <div class="field-label">State </div>
                                        <input asp-for="Address.State" type="text" name="field-name" value=""
                                        placeholder="">
                                    </div>

                                    <div class="form-group col-md-12 col-sm-6 col-xs-12">
                                        <div class="field-label">Postal Code</div>
                                        <input asp-for="Address.Postcode" type="text" name="field-name" value=""
                                        placeholder="">
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12 col-xs-12">
                            <div class="checkout-details">
                                <div class="order-box">
                                    <div class="title-box">
                                        <div>Product <span>Total</span></div>
                                    </div>
                                    <ul class="qty">
                                        @foreach (var product in Model.OrderDetail)
                                        {

                                            var OriginalTotal = product.OriginalPrice * product.Quantity;

                                            <li>@product.ProductName × @product.Quantity
                                                <span>$<del>$@OriginalTotal</del></span></li>

                                        }
                                    </ul>
                                    <ul class="sub-total">
                                        <li>Subtotal <span class="count">$@Model.Total</span></li>
                                        <li>
                                            Shipping
                                            <div class="shipping">
                                                <div class="shopping-option">
                                                    <input type="checkbox" name="free-shipping" id="free-shipping">
                                                    <label for="free-shipping">Free Shipping</label>
                                                </div>
                                                <div class="shopping-option">
                                                    <input type="checkbox" name="local-pickup" id="local-pickup">
                                                    <label for="local-pickup">Local Pickup</label>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                    <ul class="total">
                                        <li>Total <span class="count">$620.00</span></li>
                                    </ul>
                                </div>
                                <div class="payment-box">
                                    <div class="upper-box">
                                        <div class="payment-options">
                                            <ul>
                                                <li>
                                                    <div class="radio-option">
                                                        <input type="radio" name="payment-group" id="payment-1"
                                                            checked="checked">
                                                        <label for="payment-1">
                                                            Check Payments<span class="small-text">
                                                                Please send a check to Store
                                                                Name, Store Street, Store Town, Store State /
                                                                County, Store Postcode.
                                                            </span>
                                                        </label>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="radio-option">
                                                        <input type="radio" name="payment-group" id="payment-2">
                                                        <label for="payment-2">
                                                            Cash On Delivery<span class="small-text">
                                                                Please send a check to Store
                                                                Name, Store Street, Store Town, Store State /
                                                                County, Store Postcode.
                                                            </span>
                                                        </label>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="radio-option paypal">
                                                        <input type="radio" name="payment-group" id="payment-3">
                                                        <label for="payment-3">
                                                            PayPal<span class="image">
                                                                <img src="../assets/images/paypal.png" alt="">
                                                            </span>
                                                        </label>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <input asp-for="VendorId" type="number" name="vendorId"
                                        class="form-control input-number" value="@Model.VendorId" hidden>
                                    <div class="text-right"><button type="submit" value="PlaceOrder"
                                            class="btn-solid btn">Place Order</button></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- section end -->
